# Enable Internet connection sharing
IPTABLES=${IPTABLES:-{{ iptables__cmd }}}
echo "1" > /proc/sys/net/ipv4/ip_forward
$IPTABLES -I INPUT -i {{ provision__external_interface.device }} -m state --state ESTABLISHED,RELATED -j ACCEPT
$IPTABLES -t nat -N masq
$IPTABLES -t nat -A masq -j MASQUERADE
$IPTABLES -t nat -A POSTROUTING -o {{ provision__external_interface.device }} -j masq
